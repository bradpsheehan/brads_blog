:plain
  <!--[if gt IE 8] -->
%html{lang: "en"}
  /<![endif]
  %head
    %meta{charset: "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %title= data.page.title
    / Included CSS Files
    = stylesheet_link_tag "app", "theme"
    = javascript_include_tag "foundation/modernizr.foundation"

  %body{class: page_classes}

    / Basic Needs
    .fixed
      %nav.top-bar
        %ul
          %li.name
            %h1
              %a{:href => "/"} Bradley Sheehan
          %li.toggle-topbar
            %a{:href => "#"}
        %section
          %ul.left
            %li
              /%a{:href => "#"} Link
          %ul.right
            %li
              %a{:href => "http://www.twitter.com/bradleysheehan1", :target => "_blank"} Twitter
            %li
              %a{:href => "https://github.com/bradpsheehan", :target => "_blank"} GitHub
            %li
              %a{:href => "http://www.linkedin.com/pub/bradley-sheehan/1b/ab7/a48", :target => "_blank"} LinkedIn
            %li
              %a{:href => "http://www.behance.net/bradsheehan", :target => "_blank"} Behance
            %li
              %a{:href => "resume_page.html", :target => "_blank"} Resume

    .row
      .twelve.columns
        .row#about-me
          .twelve.columns
            %img(src="/images/blog/LOGO.png")
    .row#content
      .twelve.columns
        = yield
